# ============================================================================
# The Rebbe and Me - Environment Configuration
# ============================================================================
# 
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to git (it's in .gitignore)
#
# ============================================================================

# Supabase Configuration
SUPABASE_URL=https://mocerqjnksmhcjzxrewo.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# AI Provider Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_key_here  # For embeddings if using OpenAI

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=breverdbidder/the-rebbe-and-me

# Smart Router Configuration
SMART_ROUTER_DEFAULT_TIER=ULTRA_CHEAP  # Options: FREE, ULTRA_CHEAP, MEDIUM, ULTRA
SMART_ROUTER_FALLBACK_ENABLED=true

# Rate Limits
MAX_REQUESTS_PER_MINUTE=30
MAX_TOKENS_PER_HOUR=100000

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_CURRENT_EVENTS_AGENT=true
ENABLE_AUTO_SCRAPING=false  # Set to true for production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
SENTRY_DSN=your_sentry_dsn_here  # Optional

# Timezone
TZ=America/New_York

# Project Metadata
PROJECT_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
